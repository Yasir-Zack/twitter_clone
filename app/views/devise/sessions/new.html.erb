<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <div class="title is-2">Sign In</div>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="field">
            <div class="control">
              <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { class: "input" }, wrapper: false,
                      label_html: { class: "label"}%>
            </div>          
          </div>    

          <div class="field">
            <div class="control">
              <%= f.input :password,
                          required: false,
                          input_html: { class: "input" }, wrapper: false,
                          label_html: { class: "label"} %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.button :submit, "Login", class:"button is-link is-rounded" %>
            </div>
          </div>
          <% end %>

          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
