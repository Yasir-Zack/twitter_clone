<div class="container-fluid w-25 border rounded shadow mb-5 p-4">
<%= simple_form_for(@tweet) do |f| %>
<%= f.error_notification %>
<div class="field">
	<div class="control">
    <%= f.input :tweet, label: "Tweet About it", input_html: { class: "textarea" }, wrapper: false, label_html:
       { class: "label" }, placeholder: "compose a new tweet..." %>
  </div>
</div>
<%= f.button :submit, class: "button is-info" %>
<% end %>
</div>